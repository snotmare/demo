{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": { "*": ["types/*"] },
		"module": "commonjs",
		"target": "es2018",
		"noImplicitAny": true,
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"plugins": [
			{ "name": "typescript-tslint-plugin" }
		]
	},
	"lib": [
		"es2018"
	],
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}